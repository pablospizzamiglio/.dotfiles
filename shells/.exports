# Make NeoVim the default editor.
export EDITOR=nvim

export FZF_DEFAULT_COMMAND="rg --files --hidden -g '!**/.git/*'"
export FZF_DEFAULT_OPTS=" \
--info=inline --layout=reverse --height=50% \
--color=bg+:#363a4f,bg:#24273a,spinner:#f4dbd6,hl:#ed8796 \
--color=fg:#cad3f5,header:#ed8796,info:#c6a0f6,pointer:#f4dbd6 \
--color=marker:#f4dbd6,fg+:#cad3f5,prompt:#c6a0f6,hl+:#ed8796"

export PIP_REQUIRE_VIRTUALENV=1
export PIPENV_VENV_IN_PROJECT=1
export PYTHONDONTWRITEBYTECODE=1
export PYTHONUNBUFFERED=1

export COMPOSE_DOCKER_CLI_BUILD=1
export DOCKER_BUILDKIT=1

if ! grep -qi microsoft /proc/version # not in WSL
then
    export DOCKER_HOST="unix://$XDG_RUNTIME_DIR/podman/podman.sock"
fi

export GOPATH="$HOME"/.go
export N_PREFIX="$HOME"/.n
export NODE_MODULES="$HOME"/.node_modules
export PYENV_ROOT="$HOME"/.pyenv

# Path Additions
export PATH="$GOPATH"/bin:"$PATH"
export PATH="$HOME"/.emacs.d/bin:"$PATH"
export PATH="$HOME"/.local/bin:"$PATH"
export PATH="$HOME"/.poetry/bin:"$PATH"
export PATH="$N_PREFIX"/bin:"$PATH"
export PATH="$NODE_MODULES"/bin:"$PATH"
export PATH="$PYENV_ROOT"/bin:"$PATH"

eval "$(pyenv init -)"
eval "$(zoxide init zsh)"

# Rust
#source $HOME/.cargo/env

# $HOME/.extras can be used for other settings you donâ€™t want to commit
source "$HOME"/.extras


gstb() {
    git branch -r | fzf | tr -d "origin/" | xargs git switch
}
